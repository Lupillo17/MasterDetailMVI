<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cityListFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingHorizontal="@dimen/padding_default_horizontal"
        android:paddingVertical="@dimen/padding_default_vertical"
        tools:context=".presentation.fragments.SchoolDetailsFragment">

        <TextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Clinton School Writers &amp; Artists, M.S. 260" />

        <TextView
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_default_item_space"
            app:layout_constraintTop_toBottomOf="@+id/name"
            tools:text="Clinton School Writers description" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>